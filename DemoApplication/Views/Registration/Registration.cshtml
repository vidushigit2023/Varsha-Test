@model DemoApplication.Models.ViewModels.RegistrationModel
@{
    Layout = null;
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
@* <link href="/css/bootstrap.min.css" rel="stylesheet" /> *@
<div class="container mt-5">
   
     <div class="row">
        <div class="col-md-6 mx-auto">
            <div class="mb-3">
            <h2>Registration</h2>
            </div>
        </div>
         </div>

    <div class="row">
        <div class="col-md-6 mx-auto">
            <form asp-action="Registration" method="post" class="needs-validation" novalidate>

                <div class="mb-3">
                    <label for="Email" class="form-label">Email</label>
                    <input asp-for="Email" type="email" class="form-control @* Add validation classes here *@*" required>
                    <div class="invalid-feedback">
                        Please enter a valid email address.
                    </div>
                    <span class="text-danger" asp-validation-for="Email"></span>
                </div>

                <div class="mb-3">
                    <label for="Username" class="form-label">Username</label>
                    <input asp-for="Username" type="text" class="form-control @* Add validation classes here *@*" required>
                    <div class="invalid-feedback">
                        Please enter a unique username.
                    </div>
                    <span class="text-danger" asp-validation-for="Username"></span>
                </div>

                <div class="mb-3">
                    <label for="Password" class="form-label">Password</label>
                    <input asp-for="Password" type="password" class="form-control @* Add validation classes here *@*" required>
                    <div class="invalid-feedback">
                        Please enter a strong password.
                    </div>
                    <span class="text-danger" asp-validation-for="Password"></span>
                </div>

                <div class="mb-3">
                    <label for="PasswordConfirm" class="form-label">Password confirm</label>
                    <input asp-for="PasswordConfirm" type="password" class="form-control @* Add validation classes here *@*" required>
                    <div class="invalid-feedback">
                        Passwords must match.
                    </div>
                    <span class="text-danger" asp-validation-for="PasswordConfirm"></span>
                </div>

                @if (TempData["msg"] != null)
                {
                    <div class="mb-3">
                        <span class="text-denger">@TempData["msg"]</span>
                    </div>
                }

                <button type="submit" class="btn btn-success">Register</button>
                <a class="btn btn-link" href="/UserLogin/UserLogin">Login</a>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    <script>
        (function () {
            'use strict';

            // Fetch elements
            const forms = document.querySelectorAll('.needs-validation');

            // Loop over forms and prevent submission
            Array.prototype.slice.call(forms).forEach((form) => {
                form.addEventListener('submit', (event) => {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        })();
    </script>
}